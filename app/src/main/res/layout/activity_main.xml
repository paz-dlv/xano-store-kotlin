<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackground">

    <!-- Card central flotando y centrada -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="20dp"
        app:cardelevation="10dp"
        android:background="@color/cardColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="621dp"
            android:orientation="vertical"
            android:padding="32dp">

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- Fondo circular decorativo -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_bg" />

                <!-- Icono de usuario encima, más grande -->
                <ImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:contentDescription="Icono de usuario"
                    android:src="@drawable/ic_user_avatar"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Título LOGIN -->
            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/cute_dino"
                android:text="Login *"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="@color/colorPrimary" />
            <!-- Espaciador extra antes del texto -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" /> <!-- Aumenta el espacio aquí -->

            <!-- Usuario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/cute_dino"
                android:text="Nombre de usuario"
                android:textColor="@color/textSecondary" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_selector"
                android:fontFamily="@font/cute_dino"
                android:hint="Ingresa tu usuario"
                android:inputType="text"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/cute_dino"
                android:text="Contraseña"
                android:textColor="@color/textSecondary" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/edittext_selector"
                android:fontFamily="@font/cute_dino"
                android:hint="Ingresa tu contraseña"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textSecondary" />

            <!-- Espaciador extra antes del botón -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" /> <!-- Aumenta el espacio aquí -->

            <!-- Botón LOGIN -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/cute_dino"
                android:text="Login"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Espaciador extra antes del link -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <!-- Link a Sign Up -->
            <TextView
                android:id="@+id/tvSignUpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/cute_dino"
                android:text="¿No tienes cuenta? Regístrate"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>